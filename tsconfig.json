{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2020",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
